    {
      "parameters": {
        "functionCode": "// Check if noteId was provided in the webhook payload\nconst body = $input.item.json.body || $input.item.json.query || $input.item.json;\nconst noteId = body.noteId || body.note_id || null;\n\n// Build command with optional noteId argument\nconst scriptPath = '/Users/chaseeasterling/selene-n8n' + '/scripts/obsidian_export.py';\nlet command = 'python3 ' + scriptPath;\nif (noteId) {\n  command += ` ${noteId}`;\n}\n\nreturn {\n  json: {\n    command: command,\n    noteId: noteId,\n    mode: noteId ? 'event-driven' : 'batch'\n  }\n};"
      },
      "id": "function-build-command",
      "name": "Build Export Command",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [500, 400]
    },
    {
      "parameters": {
        "command": "={{ $json.command }}",
        "options": {}
      },
      "id": "exec-export-script",
      "name": "Run Export Script",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [700, 400]
    },
    {
      "parameters": {
        "jsCode": "// Parse the JSON output from the Python script\nconst output = $input.first().json.stdout;\nconst result = JSON.parse(output);\n\nreturn {\n  json: result\n};"
